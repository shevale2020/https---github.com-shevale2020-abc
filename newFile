
 var output = from i in _info
                                 select new
                                 {
                                     TaskTitle = i.TaskName,
                                     TaskNumber = i.value,
                                     TaskDate = i.EndDate.ToString("dd/MM/yyyy"),
                                     TaskName = i.TaskName,
                                     TaskId = i.TaskId,
                                     extra = i.extra,
                                     DependantTaskId = i.DependantTaskId,
                                     DependantTaskDate = _info.Where(x => x.TaskId == i.DependantTaskId).Count>0 ? _info.Where(x => x.TaskId == i.DependantTaskId).FirstOrDefault().EndDate.ToString("dd/MM/yyyy") :i.EndDate.ToString("dd/MM/yyyy") ,
                                     DependantTaskNumber = _info.Where(x => x.TaskId == i.DependantTaskId).Count>0 ? _info.Where(x => x.TaskId == i.DependantTaskId).FirstOrDefault().value: i.value,
                                     color =  i.EndDate >= _info.Where(x => x.TaskId == i.DependantTaskId).Count>0 ? _info.Where(x => x.TaskId == i.DependantTaskId).FirstOrDefault().EndDate ? "rgb(44, 160, 44)" : "rgb(214, 39, 40)" :"rgb(214, 39, 40)", //green/red color
                                     TeamName = i.TeamName
                                 };

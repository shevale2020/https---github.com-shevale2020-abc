function GetReasonOptionsForActionDD(tenantId, reasonType, workitemRowId) {
        $('#wbTaskIdForReasonOptions').val(workitemRowId);
        $.ajax({
            type: "Get",
            @*url: '@Constants.ApiPath' + 'api/' + 'WorkbasketApi/GetReasonOptions',*@
            url: '@Url.Action("GetReasonOptions", "Workbasket")',
            data: {  reasonType: reasonType },
            success: function (data) {
                $("#reasonOptionsForActionDD").empty();
                $.each(data.Records, function () {
                    $("#reasonOptionsForActionDD").append($("<option />").val(this.Key).text(this.Value));
                });
            },
        });
